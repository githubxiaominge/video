page{
    height:100%;
}
.title{
    padding:15rpx 30rpx;
}

.title image{
    width:40rpx;
    height:40rpx;
    vertical-align: middle;
}

.title text{
    vertical-align: middle;
    margin-left: 10rpx;
    font-weight: bold;
    font-size: 35rpx;
    line-height: 35rpx;
}

.content-item{
    border-top:1px solid #f0f0f0;
    width:100%;
    height:100%;
}

.item{
    display: inline-block;
    width:33.25%;
    padding-left: 2rpx;
    vertical-align: top;
    margin-top: 10rpx;
}

.item image{
    display: block;
    width:100%;
}

.item-name{
    color:#333;
    font-size: 28rpx;
    text-align: center;
}
