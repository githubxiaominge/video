.container{
    padding:30rpx 30rpx 50rpx 30rpx;
}


.title{
    padding:15rpx 0;
}

.title image{
    width:40rpx;
    height:40rpx;
    vertical-align: middle;
}

.title text{
    vertical-align: middle;
    margin-left: 10rpx;
    font-weight: bold;
    font-size: 35rpx;
    line-height: 35rpx;
}

.item{
    display: flex;
    align-items: center;
    padding :15rpx 0;
    border-bottom: solid 1px #ccc;
}

.item image{
    display: block;
    width:45%;
}

.item-content{
    flex:1;
    margin-left: 40rpx;
}

.item-name,.item-title{
    color:#999;
    font-size: 32rpx;
}

.item-title{
    color:#333;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}